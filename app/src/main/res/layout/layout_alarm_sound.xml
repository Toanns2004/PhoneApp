<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="70dp"
    android:id="@+id/relativeLayout_sound"
    android:background="@drawable/custom_alarm_sound"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp">
    <ImageView
        android:id="@+id/image_sound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dog"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/text_sound_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/image_sound"
        android:text="@string/text_name_sound"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/icon_next_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_next"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>